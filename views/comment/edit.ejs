<% include ../partials/header %>

<div class='container'>
    <div id="div-addnew-part">
        <h1>Edit Comment to <%= campground.name %></h1>
        <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT" method='POST'>
            <div class="form-group">
                <input class="form-control" type="text" name='text' value="<%=comment.text%>">    
            </div>
            <button class='btn btn-primary btn-lg btn-block' id= "submit-btn">Update</button>
        </form>
        <a href='/campgrounds/<%=campground._id%>'>Go back</a>
    </div>
</div>

  
<% include ../partials/footer %>