<% include ../partials/header %>

<div class='container'>
    <header class='jumbotron'>
        
        <h1>YelpCamp! Yelp Yelp Camp . . .</h1>
        <p>The Guide Of Your Journey</p>
          <a href='/campgrounds/new' class='btn btn-danger btn-lg own-center-me' id='add-new-btn'> Add New <i class="fas fa-plus"></i></a>  
        
    </header>
            <div class='row text-center'>
                <% campgrounds.forEach(function(camp){ %>
                    <div class='col-md-3 col-sm-6'>
                        <div class='thumbnail'>
                            <img src= '<%=camp.image %>' alt='no image'>
                            <div class='caption'>
                                <h4><strong><%= camp.name %></strong></h4>
                            </div>
                            <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary btn-lg">More info</a>
                        </div>
                    </div>
                <% }); %>
            </div>
</div>


<% include ../partials/footer %>